<div class="body">
    <div>
        {{>searchbar}}
    </div>
    <div id="main" class="main row">
        <div id='profileMainDiv'>
            <div id="profileUser">
                <div>
                    <img id="profileImg" src="{{ userInfo.picture }}" alt="{{ userInfo.name }}" />
                    <p class="font-weight-light" id="profileName">{{ userInfo.name }}</p>
                    <p class="font-weight-light" id="profileDescribtion">{{ userInfo.statement_of_intent }}</p>
                </div>

                <div id="profileInfo">
                    <ul class="list-inline">
                        <li class="list-inline-item">Posts</li>
                        <li class="list-inline-item">{{ userInfo.posts }}</li>
                    </ul>
                    <ul class="list-inline">
                        <li class="list-inline-item">Messages</li>
                        <li class="list-inline-item">{{ userInfo.threads }}</li>
                    </ul>
                    <ul class="list-inline">
                        <li class="list-inline-item">Likes</li>
                        <li class="list-inline-item">{{ userInfo.stars }}</li>
                    </ul>
                </div>
                <form>
                    <div id="profileButton">
                        <button type="button" class="btn btn-link">Edit Profile</button>
                    </div>
                </form>
            </div>
        </div>

        <div id="rightOfmain">
            <div>
                <p id='mainText'>What's your question today?</p>
                <form class="formStyle">
                    <div>
                        <input class="postSubject" type="text" name='postSubject' placeholder="subject" />
                    </div>
                    <div>
                        <textarea class="postDetail" placeholder="explain in detail ....." rows='6'
                            name='postDetail'></textarea>
                    </div>
                    <div>
                        <select class="topicList">
                            {{#each topicList}}
                            <option value="{{ this }}">{{ this }}</option>
                            {{/each}}
                        </select>
                        <input type="submit" id='btn' value='Post to Timeline' />
                    </div>
                </form>
            </div>
            <div class="searchTopic">
                <form>
                    <div>
                        <label id="searchbytopic">Search by topic </label>
                    </div>
                    <div>
                        <select class="php" id='searchTopicSelect'>
                            {{#each topicList}}
                            <option value="{{ this }}">{{ this }}</option>
                            {{/each}}
                        </select>
                        <input type="submit" id='btn' value='GO->'/>
                    </div>
                </form>
            </div>
            <div>
                <label>Latest discussions</label>
            </div>
            {{>posts}}
            {{>next}}
        </div>
    </div>
</div>